{
  "name": "saas-boilerplate",
  "version": "1.7.7",
  "type": "module",
  "packageManager": "npm@10.0.0",
  "scripts": {
    "dev:spotlight": "spotlight-sidecar",
    "dev": "next dev",
    "build": "next build",
    "fix:security": "./scripts/fix-security.sh",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true turbo run build",
    "clean": "turbo run clean",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "check-types": "tsc --noEmit",
    "check-package-json": "node -e \"console.log('package.json is valid')\"",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit -- --run",
    "test:integration": "vitest run tests/integration -- --run",
    "test:e2e": "playwright test",
    "test:visual": "chromatic test",
    "test:performance": "vitest run tests/performance -- --run",
    "test:lighthouse": "lhci autorun",
    "test:lighthouse:collect": "lhci collect",
    "test:lighthouse:assert": "lhci assert",
    "test:mutation": "stryker run",
    "test:mutation:report": "stryker run --reporters=html,clear-text",
    "test:contract": "vitest run tests/contract -- --run",
    "commit": "cz",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "turbo run db:studio",
    "storybook": "turbo run storybook",
    "storybook:build": "turbo run storybook:build",
    "storybook:serve": "turbo run storybook:serve",
    "serve-storybook": "turbo run serve-storybook",
    "test-storybook:ci": "start-server-and-test serve-storybook http://127.0.0.1:6006 test-storybook",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/neon-adapter": "^1.11.1",
    "@electric-sql/pglite": "^0.2.12",
    "@hookform/resolvers": "^3.9.0",
    "@logtail/pino": "^0.5.2",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@sentry/nextjs": "^10.30.0",
    "@spotlightjs/spotlight": "^2.5.0",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-table": "^8.20.5",
    "@trpc/client": "^11.8.0",
    "@trpc/next": "^11.8.0",
    "@trpc/react-query": "^11.8.0",
    "@trpc/server": "^11.8.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/ioredis": "^4.28.10",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cssnano": "^7.1.2",
    "drizzle-orm": "^0.35.1",
    "ioredis": "^5.8.2",
    "lucide-react": "^0.453.0",
    "next": "^16.0.10",
    "next-auth": "^5.0.0-beta.30",
    "next-intl": "^4.6.0",
    "next-themes": "^0.4.6",
    "pg": "^8.13.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.53.0",
    "sharp": "^0.33.5",
    "stripe": "^16.12.0",
    "superjson": "^2.2.6",
    "tailwind-merge": "^2.5.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@eslint-react/eslint-plugin": "^1.15.0",
    "@faker-js/faker": "^9.0.3",
    "@lhci/cli": "^0.12.0",
    "@next/bundle-analyzer": "^14.2.35",
    "@next/eslint-plugin-next": "^14.2.35",
    "@pact-foundation/pact": "^16.0.2",
    "@pact-foundation/pact-node": "^10.18.0",
    "@percy/cli": "^1.30.1",
    "@percy/playwright": "^1.0.10",
    "@playwright/test": "^1.48.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-onboarding": "^8.3.5",
    "@storybook/blocks": "^8.3.5",
    "@storybook/nextjs": "^10.1.8",
    "@storybook/react": "^10.1.8",
    "@storybook/test": "^8.3.5",
    "@storybook/test-runner": "^0.19.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^5.1.2",
    "checkly": "^6.9.7",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "storybook": "^8.3.5",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.1",
    "turbo": "^2.6.3",
    "typescript": "^5.6.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15",
    "vitest-fail-on-console": "^0.7.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
